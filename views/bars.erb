<div>
  <h1>The Happiest Hour</h1>
  <h2>Our Bars</h2>
  <h6>Bars: <%= @bars_table.count %></h6>
  <p></p>
  <a href="/bars/new"><button type="button" class="btn btn-outline-primary btn-lg">+ Add Bar</button></a>
  <hr class="my-4">  
</div>

<div>
  <% for bar in @bars %>  
    <div class="row">
      <div class="col-sm-4">
        <h3><a href="/bars/<%= bar[:id] %>"><%= bar[:name] %></a></h3>
        <h5><%= bar[:neighborhood] %></h5>
        <h6><%= bar[:address] %></h3>
        <h6><%= bar[:telephone] %></h3>
        <h6><a href="<%= bar[:website] %>"><%= bar[:website] %></a></h3>
      </div>
      <div class="col-sm-4">
        <table class="table table-sm table-borderless">
          <thead>
            <tr>
              <th scope="col">Review</th>
              <th scope="col">Out of 5.0</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Drink Specials</td>
              <td><%= (@reviews_table.where(:bar_id => bar[:id]).avg(:drinkspecials) || 0.0).to_f.round(1) %></td>
            </tr>
            <tr>
              <td>Food Specials</td>
              <td><%= (@reviews_table.where(:bar_id => bar[:id]).avg(:foodspecials) || 0.0).to_f.round(1) %></td>
            </tr>
            <tr>
              <td>Ambiance</td>
              <td><%= (@reviews_table.where(:bar_id => bar[:id]).avg(:ambiance) || 0.0).to_f.round(1) %></td>
            </tr>
            <tr>  
              <td>Overall</td>
              <td><%= (@reviews_table.where(:bar_id => bar[:id]).avg(:overall) || 0.0).to_f.round(1) %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-sm-4">
        <a href="/bars/<%= bar[:id] %>/reviews/new"><button type="button" class="btn btn-outline-primary">+ Add Review</button></a>
        <p></p>
        <h6>Total Reviews: <%= @reviews_table.where(:bar_id => bar[:id]).count %></h6>
      </div>
    </div>
    <hr class="my-4">  
  <% end %>
  <p></p>
  <a href="/bars/new"><button type="button" class="btn btn-outline-primary btn-lg">+ Add Bar</button></a>
  <p></p>
</div>

