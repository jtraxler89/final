<h1>New Bar</h1>

<form action="/bars/create" class="mt-5" method="POST">
  <div class="form-group">
    <label>Bar Name</label>
    <input type="text" class="form-control" name="name" required>
  </div>
  <div class="form-group">
    <label>Address (Street, City, State Zip)</label>
    <input type="text" class="form-control" name="address" required>
  </div>
  <div class="form-group">
    <label>Telephone #</label>
    <input type="tel" class="form-control" name="telephone" placeholder="###-###-####" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
  </div>
  <div class="form-group">
    <label>Website</label>
    <input type="text" class="form-control" name="website" required>
  </div>
  <div class="form-group">
    <label>Neighborhood</label>
    <input type="text" class="form-control" name="neighborhood" required>
  </div>  
  <button type="submit" class="btn btn-outline-primary btn-lg">Submit Bar</button>
</form>